<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="changeSet-data-1" author="nagornov" dbms="h2">
        <loadData tableName="author" file="liquibase/data/authors.csv">
            <column name="id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
            <column name="biography" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="changeSet-data-2" author="nagornov" dbms="h2">
        <loadData tableName="book" file="liquibase/data/books.csv">
            <column name="id" type="NUMERIC"/>
            <column name="name" type="STRING"></column>
            <column name="link" type="STRING"></column>
            <column name="rate" type="NUMERIC"></column>
            <column name="author_id" type="NUMERIC"></column>
        </loadData>
    </changeSet>

    <changeSet id="changeSet-data-3" author="nagornov" dbms="h2">
        <loadData tableName="book_comment" file="liquibase/data/booksComments.csv">
            <column name="id" type="NUMERIC"/>
            <column name="book_comment" type="STRING"></column>
            <column name="book_id" type="NUMERIC"></column>
            <column name="rate" type="NUMERIC"></column>
            <column name="user_commented" type="STRING"></column>
        </loadData>
    </changeSet>

</databaseChangeLog>